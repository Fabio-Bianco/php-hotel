# ===========================================
# HOTEL DIRECTORY - ENVIRONMENT CONFIGURATION
# ===========================================

# APPLICATION SETTINGS
APP_NAME="Hotel Directory Pro"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://hotel-directory.yoursite.com
APP_VERSION=2.0.0

# DATABASE CONFIGURATION (Future Enhancement)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=hotel_directory
DB_USERNAME=your_username
DB_PASSWORD=your_password

# CACHE SETTINGS
CACHE_DRIVER=file
CACHE_TTL=3600
CACHE_PREFIX=hotel_dir_

# EXTERNAL APIs
UNSPLASH_API_KEY=your_unsplash_access_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
WEATHER_API_KEY=your_weather_api_key_here

# ANALYTICS & MONITORING  
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_newrelic_key_here

# PERFORMANCE OPTIMIZATION
ENABLE_COMPRESSION=true
ENABLE_MINIFICATION=true
IMAGE_OPTIMIZATION=true
CDN_URL=https://cdn.yoursite.com

# SECURITY SETTINGS
SESSION_LIFETIME=120
CSRF_TOKEN_NAME=_token
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# EMAIL CONFIGURATION (Future Contact Forms)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yoursite.com
MAIL_FROM_NAME="Hotel Directory"

# LOGGING
LOG_CHANNEL=stack
LOG_LEVEL=error
LOG_PATH=logs/

# FEATURE FLAGS
ENABLE_DARK_MODE=true
ENABLE_FILTERS=true
ENABLE_ANIMATIONS=true
ENABLE_PWA=false
ENABLE_OFFLINE_MODE=false

# DEVELOPMENT TOOLS (Set to false in production)
ENABLE_DEBUG_BAR=false
ENABLE_QUERY_LOG=false
SHOW_ERROR_DETAILS=false