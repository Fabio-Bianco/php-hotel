{
    "name": "fabio-bianco/hotel-directory",
    "version": "2.0.0",
    "description": "Enterprise-grade hotel directory with modern PHP architecture, advanced filtering, and scalable design patterns",
    "type": "project",
    "keywords": [
        "hotel",
        "directory", 
        "php",
        "responsive",
        "accessibility",
        "portfolio",
        "enterprise"
    ],
    "homepage": "https://github.com/Fabio-Bianco/php-hotel",
    "license": "MIT",
    "authors": [
        {
            "name": "Fabio Bianco",
            "email": "fabio.bianco@example.com",
            "homepage": "https://fabiobianco.dev",
            "role": "Full Stack Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/Fabio-Bianco/php-hotel/issues",
        "source": "https://github.com/Fabio-Bianco/php-hotel"
    },
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "suggest": {
        "monolog/monolog": "For advanced logging capabilities",
        "vlucas/phpdotenv": "For environment configuration management",
        "symfony/cache": "For performance caching implementation"
    },
    "autoload": {
        "psr-4": {
            "HotelDirectory\\": "src/",
            "HotelDirectory\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "test-coverage": "phpunit --coverage-html coverage/",
        "analyse": "phpstan analyse src/",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/",
        "quality": [
            "@cs-check",
            "@analyse", 
            "@test"
        ],
        "post-install-cmd": [
            "echo 'Hotel Directory dependencies installed successfully!'"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "archive": {
        "exclude": [
            "tests/",
            "docs/",
            ".github/",
            "*.md"
        ]
    }
}